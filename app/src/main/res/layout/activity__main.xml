<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/silver_darker">

    <TextView
        android:id="@+id/resultTextView"
        android:gravity="bottom|end"
        android:padding="16dp"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/clearTextView"
                style="@style/ButtonStyle"
                android:text="C"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/negativeTextView"
                style="@style/ButtonStyle"
                android:text="±"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/percentTextView"
                style="@style/ButtonStyle"
                android:text="%"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/divideTextView"
                style="@style/ButtonStyle"
                android:text="÷"
                android:backgroundTint="@color/primary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/sevenTextView"
                style="@style/ButtonStyle"
                android:text="7"
                android:layout_width="0dp"
                android:backgroundTint="@color/silver_light"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/eightTextView"
                style="@style/ButtonStyle"
                android:text="8"
                android:layout_width="0dp"
                android:backgroundTint="@color/silver_light"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/nineTextView"
                style="@style/ButtonStyle"
                android:text="9"
                android:backgroundTint="@color/silver_light"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/multiTextView"
                style="@style/ButtonStyle"
                android:text="×"
                android:backgroundTint="@color/primary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/fourTextView"
                style="@style/ButtonStyle"
                android:text="4"
                android:layout_width="0dp"
                android:backgroundTint="@color/silver_light"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fiveTextView"
                style="@style/ButtonStyle"
                android:text="5"
                android:layout_width="0dp"
                android:backgroundTint="@color/silver_light"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/sixTextView"
                style="@style/ButtonStyle"
                android:text="6"
                android:backgroundTint="@color/silver_light"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/minusTextView"
                style="@style/ButtonStyle"
                android:text="-"
                android:backgroundTint="@color/primary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/oneTextView"
                style="@style/ButtonStyle"
                android:text="1"
                android:layout_width="0dp"
                android:backgroundTint="@color/silver_light"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/twoTextView"
                style="@style/ButtonStyle"
                android:text="2"
                android:layout_width="0dp"
                android:backgroundTint="@color/silver_light"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/threeTextView"
                style="@style/ButtonStyle"
                android:text="3"
                android:backgroundTint="@color/silver_light"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/plusTextView"
                style="@style/ButtonStyle"
                android:text="+"
                android:backgroundTint="@color/primary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/zeroTextView"
                style="@style/ButtonStyle"
                android:text="0"
                android:layout_width="0dp"
                android:backgroundTint="@color/silver_light"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent" />

           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/dotTextView"
                   style="@style/ButtonStyle"
                   android:text="."
                   android:backgroundTint="@color/silver_light"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_marginEnd="2dp"
                   android:layout_height="match_parent" />

               <TextView
                   android:id="@+id/equalsTextView"
                   style="@style/ButtonStyle"
                   android:text="="
                   android:backgroundTint="@color/primary"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent" />

           </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>